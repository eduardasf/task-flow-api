          "first": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "rows": {
            "type": "integer",
            "format": "int32"
          },
          "page": {
            "type": "integer",
            "format": "int32"
          },
          "total": {
            "type": "integer",
            "format": "int32"
          },
          "pageCount": {
