            },
            "nullable": true
          },
          "pageEvent": {
            "$ref": "#/components/schemas/PageEvent"
          }
        },
        "additionalProperties": false
      },
      "StatusTarefa": {
        "enum": [
          "Pending",
          "Completed",
          "Overdue",
          "All"
        ],
        "type": "string"
      },
      "Tarefa": {
        "required": [
          "dataValidade",
          "nome",
          "status"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "nome": {
            "maxLength": 150,
            "type": "string",
            "nullable": true
          },
          "descricao": {
            "maxLength": 500,
            "type": "string",
            "nullable": true
          },
          "dataValidade": {
            "type": "string",
            "format": "date-time"
          },
          "concluido": {
            "type": "boolean"
          },
          "status": {
            "$ref": "#/components/schemas/StatusTarefa"
          }
        },
        "additionalProperties": false
      },
      "TarefaResponse": {
